{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2020"],
    "downlevelIteration": true,
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src"]
}
