{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2020"],
    "downlevelIteration": true,
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "types",
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src"]
}
